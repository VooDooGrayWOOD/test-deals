{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "src/*",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "client/src/**/*.ts",
    "client/src/**/*.d.ts",
    "client/src/**/*.tsx",
    "client/src/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json"}]
}
